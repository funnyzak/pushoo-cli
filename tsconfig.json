{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "lib": [
      "es2020"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
